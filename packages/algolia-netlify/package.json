{
  "name": "@tryghost/algolia-netlify",
  "version": "0.1.13",
  "repository": "https://github.com/TryGhost/algolia/tree/master/packages/algolia-netlify",
  "author": "Ghost Foundation",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "dev": "yarn serve",
    "test": "NODE_ENV=testing mocha './test/**/*.test.js'",
    "lint": "eslint . --ext .js --cache",
    "posttest": "yarn lint",
    "postinstall": "netlify-lambda install functions",
    "serve": "NODE_OPTIONS=--openssl-legacy-provider yarn build && netlify dev",
    "build": "mkdir -p build/site && netlify-lambda build functions"
  },
  "files": [
    "index.js",
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:ghost/browser"
    ],
    "plugins": [
      "ghost"
    ]
  },
  "eslintIgnore": [
    "webpack.functions.js",
    "build/*"
  ],
  "devDependencies": {
    "eslint": "8.22.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-ghost": "2.15.1",
    "eslint-plugin-import": "2.27.5",
    "mocha": "10.0.0",
    "should": "13.2.3",
    "sinon": "14.0.0"
  },
  "dependencies": {
    "@tryghost/algolia-fragmenter": "^0.2.4",
    "@tryghost/algolia-indexer": "^0.2.1",
    "dotenv-webpack": "8.0.1",
    "netlify-lambda": "2.0.15",
    "webpack": "5.76.0"
  }
}
